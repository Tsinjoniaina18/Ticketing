<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4">
    <display-name>Application WEB Download</display-name>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>mg.itu.prom16.FrontController</servlet-class>
        <init-param>
            <param-name>Controllers</param-name>
            <param-value>controller</param-value>
        </init-param>
        <init-param>
            <param-name>Validation</param-name>
            <param-value>isAuthetified</param-value>
        </init-param>
        <init-param>
            <param-name>Role</param-name>
            <param-value>auth</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>